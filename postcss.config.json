{
    "plugins": [
        "postcss-flexbugs-fixes",
        [
            "postcss-preset-env",
            {
                "autoprefixer": {
                    "flexbox": "no-2009"
                },
                "stage": 3,
                "features": {
                    "custom-properties": false
                }
            }
        ],
        [
            "postcss-pxtorem",
            {
                "rootValue": 16,
                "unitPrecision": 5,
                "propList": [
                    "*"
                ],
                "selectorBlackList": [
                    "border-radius"
                ],
                "replace": true,
                "mediaQuery": false,
                "minPixelValue": 0,
                "exclude": "/node_modules/i"
            }
        ]
    ]
}
